    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "tsBuildInfoFile": "dist/build.tsbuildinfo",
    "paths": {
      "@ditsmod/core": ["../../packages/core/src"],
      "@ditsmod/router": ["../../packages/router/src"],
