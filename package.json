{
  "private": true,
  "name": "ditsmod",
  "version": "1.0.0",
  "description": "monorepo for ditsmod projects",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "test": "npm run build && jest",
    "test1": "jest -c jest.config1.ts",
    "test-examples": "npm run build-examples && jest --config examples/jest.config.ts",
    "test-all": "npm test && npm run test-examples && npm run build-examples && npm run build-vscode",
    "pub": "lerna publish from-package --no-git-tag-version",
    "build": "tsc -b packages",
    "build-examples": "tsc -b examples/tsconfig.build.json",
    "build-vscode": "tsc -b examples/tsconfig.vscode.json",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf packages/**/dist",
    "clean-examples": "rimraf examples/**/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ditsmod/ditsmod.git"
  },
  "keywords": [
    "ditsmod",
    "monorepo"
  ],
  "author": "Костя Третяк",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ditsmod/ditsmod/issues"
  },
  "homepage": "https://github.com/ditsmod/ditsmod#readme",
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/eslint": "^8.21.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.5.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "bunyan": "^1.8.15",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "lerna": "^7.1.4",
    "nodemon": "^3.0.1",
    "pino": "^8.11.0",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^5.2.2",
    "winston": "^3.9.0"
  }
}
