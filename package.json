{
  "private": true,
  "name": "ditsmod",
  "version": "1.0.0",
  "description": "monorepo for ditsmod projects",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "test": "yarn build-test && yarn esm-jest",
    "test1": "yarn esm-jest -c jest.config1.ts",
    "esm-jest": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js",
    "test-examples": "yarn build-examples && yarn esm-jest -c examples/jest.config.ts",
    "test-all": "yarn test && yarn test-examples && yarn build-examples && yarn build-vscode",
    "pub": "lerna publish from-package --no-git-tag-version",
    "build": "tsc -b packages",
    "build-test": "tsc -b packages/tsconfig.test.json",
    "build-examples": "tsc -b examples/tsconfig.build.json",
    "build-vscode": "tsc -b examples/tsconfig.vscode.json",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf packages/*/dist* examples/*/dist*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ditsmod/ditsmod.git"
  },
  "keywords": [
    "ditsmod",
    "monorepo"
  ],
  "author": "Костя Третяк",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ditsmod/ditsmod/issues"
  },
  "homepage": "https://github.com/ditsmod/ditsmod#readme",
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "bunyan": "^1.8.15",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "lerna": "^7.1.5",
    "nodemon": "^3.0.1",
    "pino": "^8.15.0",
    "prettier": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "winston": "^3.10.0"
  }
}
